clc
clear
clf

load data1.mat
data = unnamed1;
t = data(:,1); c = data(:,2);
x = zeros(1,10);
y = zeros(1,10);
for i = 2 : 1 : 11
    x(i) = ( c(i) - c(i-1) ) / (t(i) - t(i-1));
    y(i) = x(i) / c(i);
end
y1 = -sum(y) / 10;
scatter (t,c)
hold on
t = 0 : 0.1 : 10;
plot(t , 1 ./ (1/40 + 0.02 * t))
hold on
plot(t , 40 * exp(-y1*t))